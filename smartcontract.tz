{ parameter (or (unit %empty) (mutez %make_transaction)) ;
  storage nat ;
  code { UNPAIR ;
         IF_LEFT
           { DROP ; NIL operation ; PAIR }
           { PUSH mutez 10000000 ;
             SWAP ;
             COMPARE ;
             EQ ;
             IF { PUSH nat 1 ; SWAP ; DUP ; DUG 2 ; ADD ; DROP }
                { PUSH string "Incorrect amount of tez! Please send 10 tez" ; FAILWITH } ;
             NIL operation ;
             PAIR } } }

