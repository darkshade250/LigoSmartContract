{ parameter (or (unit %drain) (mutez %refill)) ;
  storage nat ;
  code { UNPAIR ;
         IF_LEFT
           { DROP ;
             PUSH address "KT1KJUgWMo8UEvqDhBtLMc2M42XJNgfJRttQ" ;
             CONTRACT unit ;
             IF_NONE { PUSH string "Contract not found." ; FAILWITH } {} ;
             PUSH mutez 10000000 ;
             UNIT ;
             TRANSFER_TOKENS ;
             SWAP ;
             NIL operation ;
             DIG 2 ;
             CONS ;
             PAIR }
           { PUSH mutez 10000000 ;
             SWAP ;
             COMPARE ;
             EQ ;
             IF { PUSH nat 1 ; ADD ; NIL operation ; PAIR }
                { DROP ; PUSH string "Incorrect amount, Please transfer 10 tez" ; FAILWITH } } } }

